@page "/edit-campaign-campaign"

<PageTitle>Edit CampaignCampaign</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CampaignCampaign</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.CampaignCampaign" Data="@campaignCampaign" Visible="@(campaignCampaign != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="campaignid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.campaign_id" Name="campaign_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="campaign_id" Text="campaign_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.name" Name="name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@campaignCampaign.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.status" Name="status" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="type" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.type" Name="type" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="startdate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@campaignCampaign.start_date" Name="start_date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="enddate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@campaignCampaign.end_date" Name="end_date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="description" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.description" Name="description" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="budget" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@campaignCampaign.budget" Name="budget" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="mailmergeonlywithaddress" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@campaignCampaign.mail_merge_only_with_address" Name="mail_merge_only_with_address" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="budgetcurrency" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.budget_currency" Name="budget_currency" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="assignedemployeeid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.assigned_employee_id" Name="assigned_employee_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="contactstemplateid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.contacts_template_id" Name="contacts_template_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="leadstemplateid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.leads_template_id" Name="leads_template_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="accountstemplateid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.accounts_template_id" Name="accounts_template_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="userstemplateid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@campaignCampaign.users_template_id" Name="users_template_id" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

