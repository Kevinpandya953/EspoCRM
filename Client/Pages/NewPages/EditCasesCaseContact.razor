@page "/edit-cases-case-contact"

<PageTitle>Edit CasesCaseContact</PageTitle>

    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CasesCaseContact</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.CasesCaseContact" Data="@casesCaseContact" Visible="@(casesCaseContact != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCaseContact.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="casecontactid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@casesCaseContact.case_contact_id" Name="case_contact_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="case_contact_id" Text="case_contact_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="case" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@casesCasesForcaseId" TextProperty="assigned_employee_id" ValueProperty="case_id" AllowClear=true
                        Disabled=@(hascase_idValue)  style="display: block; width: 100%" @bind-Value="@casesCaseContact.case_id" Name="case_id"
                        SelectedValue=@casesCasesForcaseIdValue Count=@casesCasesForcaseIdCount LoadData=@casesCasesForcaseIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="contact" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@contactscontactsForcontactId" TextProperty="assigned_employee_id" ValueProperty="contact_id" AllowClear=true
                        Disabled=@(hascontact_idValue)  style="display: block; width: 100%" @bind-Value="@casesCaseContact.contact_id" Name="contact_id"
                        SelectedValue=@contactscontactsForcontactIdValue Count=@contactscontactsForcontactIdCount LoadData=@contactscontactsForcontactIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@casesCaseContact.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

