@page "/add-leads-lead"

<PageTitle>Add LeadsLead</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save LeadsLead</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.LeadsLead" Data="@leadsLead" Visible="@(leadsLead != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="leadid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.lead_id" Name="lead_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="lead_id" Text="lead_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@leadsLead.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="salutationname" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.salutation_name" Name="salutation_name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="firstname" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.first_name" Name="first_name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="lastname" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.last_name" Name="last_name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="title" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.title" Name="title" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.status" Name="status" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="source" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.source" Name="source" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="industry" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.industry" Name="industry" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="opportunityamount" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@leadsLead.opportunity_amount" Name="opportunity_amount" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="website" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.website" Name="website" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="addressstreet" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.address_street" Name="address_street" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="addresscity" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.address_city" Name="address_city" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="addressstate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.address_state" Name="address_state" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="addresscountry" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.address_country" Name="address_country" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="addresspostalcode" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.address_postal_code" Name="address_postal_code" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="donotcall" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@leadsLead.do_not_call" Name="do_not_call" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="description" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.description" Name="description" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="convertedat" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@leadsLead.converted_at" Name="converted_at" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="accountname" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.account_name" Name="account_name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="middlename" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.middle_name" Name="middle_name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="opportunityamountcurrency" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.opportunity_amount_currency" Name="opportunity_amount_currency" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="assignedemployeeid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.assigned_employee_id" Name="assigned_employee_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="campaign" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@campaigncampaignsForcampaignId" TextProperty="users_template_id" ValueProperty="campaign_id" AllowClear=true
                        Disabled=@(hascampaign_idValue)  style="display: block; width: 100%" @bind-Value="@leadsLead.campaign_id" Name="campaign_id"
                        SelectedValue=@campaigncampaignsForcampaignIdValue Count=@campaigncampaignsForcampaignIdCount LoadData=@campaigncampaignsForcampaignIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="createdaccountid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.created_account_id" Name="created_account_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="createdcontactid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.created_contact_id" Name="created_contact_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="createdopportunityid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@leadsLead.created_opportunity_id" Name="created_opportunity_id" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

