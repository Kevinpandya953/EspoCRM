@page "/add-address-address-state"

<PageTitle>Add AddressAddressState</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save AddressAddressState</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.AddressAddressState" Data="@addressAddressState" Visible="@(addressAddressState != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@addressAddressState.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="stateid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@addressAddressState.state_id" Name="state_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="state_id" Text="state_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="statename" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@addressAddressState.state_name" Name="state_name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="addresscountry" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@addressaddressCountriesForcountryId" TextProperty="country_name" ValueProperty="country_id" AllowClear=true
                        Disabled=@(hascountry_idValue)  style="display: block; width: 100%" @bind-Value="@addressAddressState.country_id" Name="country_id"
                        SelectedValue=@addressaddressCountriesForcountryIdValue Count=@addressaddressCountriesForcountryIdCount LoadData=@addressaddressCountriesForcountryIdLoadData />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

