@page "/add-tasks-task"

<PageTitle>Add TasksTask</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save TasksTask</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.TasksTask" Data="@tasksTask" Visible="@(tasksTask != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="taskid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.task_id" Name="task_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="task_id" Text="task_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="name" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.name" Name="name" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@tasksTask.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.status" Name="status" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="priority" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.priority" Name="priority" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="datestart" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tasksTask.date_start" Name="date_start" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="dateend" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tasksTask.date_end" Name="date_end" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="datestartdate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tasksTask.date_start_date" Name="date_start_date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="dateenddate" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tasksTask.date_end_date" Name="date_end_date" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="datecompleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@tasksTask.date_completed" Name="date_completed" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="description" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.description" Name="description" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="parentid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.parent_id" Name="parent_id" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="parenttype" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@tasksTask.parent_type" Name="parent_type" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="account" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@accountsaccountsForaccountId" TextProperty="assigned_employee_id" ValueProperty="account_id" AllowClear=true
                        Disabled=@(hasaccount_idValue)  style="display: block; width: 100%" @bind-Value="@tasksTask.account_id" Name="account_id"
                        SelectedValue=@accountsaccountsForaccountIdValue Count=@accountsaccountsForaccountIdCount LoadData=@accountsaccountsForaccountIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="contact" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@contactscontactsForcontactId" TextProperty="assigned_employee_id" ValueProperty="contact_id" AllowClear=true
                        Disabled=@(hascontact_idValue)  style="display: block; width: 100%" @bind-Value="@tasksTask.contact_id" Name="contact_id"
                        SelectedValue=@contactscontactsForcontactIdValue Count=@contactscontactsForcontactIdCount LoadData=@contactscontactsForcontactIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="employee" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@employeesemployeesForassignedEmployeeId" TextProperty="layout_set_id" ValueProperty="employee_id" AllowClear=true
                        Disabled=@(hasassigned_employee_idValue)  style="display: block; width: 100%" @bind-Value="@tasksTask.assigned_employee_id" Name="assigned_employee_id"
                        SelectedValue=@employeesemployeesForassignedEmployeeIdValue Count=@employeesemployeesForassignedEmployeeIdCount LoadData=@employeesemployeesForassignedEmployeeIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="email" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@emailemailsForemailId" TextProperty="account_id" ValueProperty="email_id" AllowClear=true
                        Disabled=@(hasemail_idValue)  style="display: block; width: 100%" @bind-Value="@tasksTask.email_id" Name="email_id"
                        SelectedValue=@emailemailsForemailIdValue Count=@emailemailsForemailIdCount LoadData=@emailemailsForemailIdLoadData />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

