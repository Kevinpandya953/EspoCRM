@page "/add-documents-document-lead"

<PageTitle>Add DocumentsDocumentLead</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save DocumentsDocumentLead</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.DocumentsDocumentLead" Data="@documentsDocumentLead" Visible="@(documentsDocumentLead != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@documentsDocumentLead.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="documentleadid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@documentsDocumentLead.document_lead_id" Name="document_lead_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="document_lead_id" Text="document_lead_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="document" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@documentsdocumentsFordocumentId" TextProperty="folder_id" ValueProperty="document_id" AllowClear=true
                        Disabled=@(hasdocument_idValue)  style="display: block; width: 100%" @bind-Value="@documentsDocumentLead.document_id" Name="document_id"
                        SelectedValue=@documentsdocumentsFordocumentIdValue Count=@documentsdocumentsFordocumentIdCount LoadData=@documentsdocumentsFordocumentIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="lead" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@leadsleadsForleadId" TextProperty="created_opportunity_id" ValueProperty="lead_id" AllowClear=true
                        Disabled=@(haslead_idValue)  style="display: block; width: 100%" @bind-Value="@documentsDocumentLead.lead_id" Name="lead_id"
                        SelectedValue=@leadsleadsForleadIdValue Count=@leadsleadsForleadIdCount LoadData=@leadsleadsForleadIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@documentsDocumentLead.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

