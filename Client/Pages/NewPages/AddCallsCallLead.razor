@page "/add-calls-call-lead"

<PageTitle>Add CallsCallLead</PageTitle>
    <RadzenColumn SizeMD=12>
        <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Cannot save CallsCallLead</RadzenAlert>
        <RadzenTemplateForm TItem="EspoNew.Server.Models.EspoDbNew.CallsCallLead" Data="@callsCallLead" Visible="@(callsCallLead != null)" Submit="@FormSubmit">
          <RadzenStack>
            <RadzenFormField Text="E Tag" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@callsCallLead.ETag" Name="ETag" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="callleadid" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@callsCallLead.call_lead_id" Name="call_lead_id" />
                  </ChildContent>    
                  <Helper>
                    <RadzenRequiredValidator Component="call_lead_id" Text="call_lead_id is required" />
                  </Helper>
            </RadzenFormField>
            <RadzenFormField Text="call" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@callscallsForcallId" TextProperty="assigned_employee_id" ValueProperty="call_id" AllowClear=true
                        Disabled=@(hascall_idValue)  style="display: block; width: 100%" @bind-Value="@callsCallLead.call_id" Name="call_id"
                        SelectedValue=@callscallsForcallIdValue Count=@callscallsForcallIdCount LoadData=@callscallsForcallIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="lead" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenDropDownDataGrid Data="@leadsleadsForleadId" TextProperty="created_opportunity_id" ValueProperty="lead_id" AllowClear=true
                        Disabled=@(haslead_idValue)  style="display: block; width: 100%" @bind-Value="@callsCallLead.lead_id" Name="lead_id"
                        SelectedValue=@leadsleadsForleadIdValue Count=@leadsleadsForleadIdCount LoadData=@leadsleadsForleadIdLoadData />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="status" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenTextBox style="display: block; width: 100%" @bind-Value="@callsCallLead.status" Name="status" />
              </ChildContent>
            </RadzenFormField>
            <RadzenFormField Text="deleted" Variant="Variant.Filled">
                  <ChildContent>
                    <RadzenNumeric style="display: block; width: 100%" @bind-Value="@callsCallLead.deleted" Name="deleted" />
              </ChildContent>
            </RadzenFormField>
          </RadzenStack>
          <RadzenStack style="margin-top:1rem;" Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                    <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="save" Text="Save" Variant="Variant.Flat" />
                    <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" Click="@CancelButtonClick"  />
          </RadzenStack>
        </RadzenTemplateForm>
    </RadzenColumn>

